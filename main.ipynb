import cv2
import pytesseract
from google.colab.patches import cv2_imshow
from PIL import Image
import os

# Set path for result saving
os.makedirs("results", exist_ok=True)

# Function: Preprocess Image
def preprocess_image(img_path):
    img = cv2.imread(img_path)

    gray = cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)
    blur = cv2.GaussianBlur(gray, (5,5), 0)
    thresh = cv2.threshold(blur, 150, 255, cv2.THRESH_BINARY_INV + cv2.THRESH_OTSU)[1]

    cv2.imwrite("results/processed.png", thresh)
    return img, thresh


# Function: Run OCR
def extract_text(processed_img):
    text = pytesseract.image_to_string(processed_img)
    
    with open("results/extracted_text.txt", "w") as f:
        f.write(text)

    return text


# Upload image
from google.colab import files
uploaded = files.upload()

for filename in uploaded.keys():
    print("\nProcessing:", filename)
    img, processed = preprocess_image(filename)

    print("\nðŸ“Œ Processed Image:")
    cv2_imshow(processed)

    print("\nðŸ“Œ Extracted Text:")
    text = extract_text(processed)
    print(text)
